<h1>All Users</h1>

	<table>
		<tr>
	    <th>User Name</th>
	    <th>Email</th>
	    <th>Actions</th>
	  </tr>
	<% @users.each do |user| %>
		<tr class="<%= cycle('oddrow', 'evenrow') %>">
			<td><%= user.name %></td>
			<td><%= user.email %></td>
			<td>
				<%= link_to 'Edit', edit_user_path(user) %>
				<%= link_to 'Delete', user_path(user), :method => 'delete', :confirm => 'Are you sure?' %>
			</td>
		</tr>
	<% end %>
	</table>

	<%= link_to 'New User', new_user_path, class: "btn btn-primary" %>