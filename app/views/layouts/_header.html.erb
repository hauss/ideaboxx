<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
 
      <!-- .btn-navbar is used as the toggle for collapsed navbar content -->
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
 
      <!-- Be sure to leave the brand out there if you want it shown -->
      <%= link_to image_tag('/assets/ideaboxx-logo.png', :width => "105"), root_path, class: "brand" %>
 
      <!-- Everything you want hidden at 940px or less, place within here -->
      <div class="nav-collapse collapse">
        <ul class="nav">
          <% if current_user.try(:admin?) %>
            <li><%= link_to "Admin", admin_path %></li>
          <% end %>
        </ul>

      	<ul class="nav pull-right">
          <% if user_signed_in? %>
            <li><%= link_to "Edit Profile", edit_user_registration_path %></li>
            <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
            <li><div><%= link_to 'New Idea', new_idea_path, class: "btn btn-primary" %></div></li>
          <% else %>
            <li><%= link_to "Login", new_user_session_path %></li>
            <% if false %>
            <li><div><%= link_to "Sign Up", new_user_registration_path, class: "btn btn-primary" %></div></li>
            <% end %>
          <% end %>
	    </ul>		
      </div>
 
    </div>
  </div>
</div>