<h1>All Ideas</h1>

<table>
  <tr>
    <th>Description</th>
    <th>Submitted by:</th>
    <th>Action</th>
    <th></th>
    <th></th>
  </tr>

<% @ideas.each do |idea| %>
  <tr>
    <td><%= idea.description %></td>
    <td><%= idea.user.name %></td>
    <td>
      <%= link_to '', idea, :class => "icon-zoom-in" %>
      <%= link_to '', idea, :class => "icon-comment" %>
      <% if current_user == idea.user %>
        <%= link_to '', edit_idea_path(idea), :class => "icon-edit" %>
        <%= link_to '', idea, method: :delete, data: { confirm: 'Are you sure?' }, :class => "icon-trash" %>
      </td>
    <% end %>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Idea', new_idea_path %>
