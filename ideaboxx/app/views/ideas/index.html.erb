<h1>Ideas</h1>

<table>
  <tr>
    <th class="span2">Product</th>
    <th class="span5">Idea</th>
    <th class="span2">Submitter</th>
    <th class="span1">Hours</th>
    <th class="span1">Priority</th>
    <th>Status</th>
    <th>Comment</th>
  </tr>

<% @ideas.each do |idea| %>
  <div>
    <tr class="<%= cycle('oddrow', 'evenrow') %>">
      <td><%= idea.related_product %></td>
      <td><%= idea.description %></td>
      <td><%= idea.submitted_by %></td>
      <td><span class="rest-in-place" data-url="ideas/11" data-object="idea" data-attribute="hours"><%= idea.hours %></span></td>
      <td><%= idea.priority %></td>
      <td><%= idea.status %></td>
      <td align="center"><%= link_to '', idea, :class => "icon-comment" %></td>
    </tr>
  </div>
<% end %>
</table>

<br />
<%= link_to 'New Idea', new_idea_path, class: "btn btn-primary" %>
